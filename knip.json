{
	"$schema": "https://knip.dev/schema-jsonc.json",
	"ignore": ["docs/source.config.ts"],
	"ignoreDependencies": ["@tauri-apps/plugin-opener", "tailwind-merge", "dependency-cruiser"],
	"workspaces": {
		".": {
			"project": ["src/**/*.{ts,tsx}"],
			"entry": ["src/main.tsx"]
		},
		"docs": {
			"project": ["**/*.{ts,tsx}"],
			"entry": ["app/**/page.tsx", "app/**/layout.tsx"]
		}
	}
}
