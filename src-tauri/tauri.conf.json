{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "tauri-app",
	"version": "0.1.0",
	"identifier": "com.eito.tauri-app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "tauri-app",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; connect-src 'self' ws://localhost:1421"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"updater": {
			"endpoints": [
				"https://github.com/OWNER/REPO/releases/latest/download/latest.json"
			],
			"dialog": true,
			"pubkey": "REPLACE_WITH_YOUR_TAURI_PUBLIC_KEY"
		}
	}
}
